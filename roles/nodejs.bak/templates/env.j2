NODE_ENV={{ node_env }}
PORT={{ app_port }}

# Database Configuration
{% if groups['dbservers'] is defined and groups['dbservers']|length > 0 %}
DB_HOST={{ hostvars[groups['dbservers'][0]].ansible_host }}
DB_PORT=5432
DB_NAME={{ app_name }}_{{ app_environment }}
DB_USER={{ app_name }}_user
DB_PASSWORD=changeme_secure_password
{% else %}
