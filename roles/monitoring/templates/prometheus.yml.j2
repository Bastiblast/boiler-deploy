global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets: []

rule_files: []

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['all'] %}
        - '{{ hostvars[host].ansible_host }}:9100'
{% endfor %}

  - job_name: 'postgresql'
    static_configs:
      - targets:
{% for host in groups['dbservers'] %}
        - '{{ hostvars[host].ansible_host }}:9187'
{% endfor %}
